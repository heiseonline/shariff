    "url-loader": "^1.1.2",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.5"
  },
  "browserify-shim": {
    "./dom": "global:jQuery"
  },
  "keywords": [
    "heise",
    "social buttons",
    "shariff"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
