    },
    {
      "name": "Sebastian Hilbig",
      "email": "seh@heise.de"
    },
    {
      "name": "Erich Kramer",
      "email": "km@heise.de"
    },
    {
      "name": "Deniz Sesli",
      "email": "dzs@heise.de"
    }
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "jquery": "^3.4.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "homepage": "https://github.com/heiseonline/shariff",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
